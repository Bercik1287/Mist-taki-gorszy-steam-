@model mist.ViewModels.EditReviewViewModel
@{
    ViewData["Title"] = "Edytuj recenzję";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil-square"></i> Edytuj recenzję</h1>
        <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Powrót
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Edytuj recenzję: @ViewBag.GameTitle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="GameId" />

                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Ocena -->
                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Ocena</label>
                            <select asp-for="Rating" class="form-select">
                                <option value="">Wybierz ocenę</option>
                                <option value="1">★ (1/5) - Słaba</option>
                                <option value="2">★★ (2/5) - Taka sobie</option>
                                <option value="3">★★★ (3/5) - Dobra</option>
                                <option value="4">★★★★ (4/5) - Bardzo dobra</option>
                                <option value="5">★★★★★ (5/5) - Doskonała</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <!-- Tytuł -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tytuł recenzji</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Treść -->
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Recenzja</label>
                            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Zapisz zmiany
                            </button>
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId" 
                               class="btn btn-secondary">
                                Anuluj
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informacje</h5>
                </div>
                <div class="card-body">
                    <p class="small mb-0">Możesz edytować swoją recenzję w dowolnym momencie.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">