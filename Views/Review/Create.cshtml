@model mist.ViewModels.CreateReviewViewModel
@{
    ViewData["Title"] = "Dodaj recenzję";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil-square"></i> Dodaj recenzję</h1>
        <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Powrót
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Twoja recenzja: @ViewBag.GameTitle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="GameId" />

                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Ocena -->
                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Ocena</label>
                            <select asp-for="Rating" class="form-select">
                                <option value="">Wybierz ocenę</option>
                                <option value="1">★ (1/5) - Słaba</option>
                                <option value="2">★★ (2/5) - Taka sobie</option>
                                <option value="3">★★★ (3/5) - Dobra</option>
                                <option value="4">★★★★ (4/5) - Bardzo dobra</option>
                                <option value="5">★★★★★ (5/5) - Doskonała</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <!-- Tytuł -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tytuł recenzji</label>
                            <input asp-for="Title" class="form-control" placeholder="np. Świetna gra!" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <div class="form-text">3-100 znaków</div>
                        </div>

                        <!-- Treść -->
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Recenzja</label>
                            <textarea asp-for="Content" class="form-control" rows="6" 
                                      placeholder="Podziel się swoją opinią o grze..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <div class="form-text">10-1000 znaków</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Opublikuj recenzję
                            </button>
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId" 
                               class="btn btn-secondary">
                                Anuluj
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Wskazówki</h5>
                </div>
                <div class="card-body">
                    <h6>Dobra recenzja to:</h6>
                    <ul class="small">
                        <li>Szczera i obiektywna</li>
                        <li>Zawiera konkretne przykłady</li>
                        <li>Napisana przejrzystym językiem</li>
                        <li>Respectful wobec twórców</li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6><i class="bi bi-shield-check"></i> Verified Purchase</h6>
                    <p class="small mb-0">
                        <i class="bi bi-check-circle-fill text-success"></i> 
                        Posiadasz tę grę, więc Twoja recenzja będzie oznaczona jako "Verified Purchase"
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">