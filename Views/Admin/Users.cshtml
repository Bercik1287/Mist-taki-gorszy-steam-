@model IEnumerable<mist.Models.User>
@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Zarządzanie użytkownikami</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Powrót do panelu
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lista użytkowników (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nazwa użytkownika</th>
                            <th>Email</th>
                            <th>Rola</th>
                            <th>Data rejestracji</th>
                            <th>Zakupy</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <strong>@user.Username</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill"></i> Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-person"></i> User
                                        </span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @{
                                        var purchaseCount = user.Purchases?.Count ?? 0;
                                    }
                                    <span class="badge bg-info">@purchaseCount</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="UserDetails" asp-route-id="@user.Id" 
                                           class="btn btn-outline-primary" title="Szczegóły">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        
                                        <form asp-action="ToggleUserRole" asp-route-id="@user.Id" 
                                              method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="btn btn-outline-warning" 
                                                    title="Zmień rolę"
                                                    onclick="return confirm('Czy na pewno chcesz zmienić rolę tego użytkownika?')">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        </form>

                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" 
                                              method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    title="Usuń"
                                                    onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika? Ta operacja jest nieodwracalna!')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">