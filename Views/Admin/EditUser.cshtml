@model mist.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Edytuj użytkownika";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-gear"></i> Edytuj użytkownika</h1>
        <a asp-action="Users" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Powrót do listy
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Edycja profilu użytkownika</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="EditUser" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsAdminEdit" value="true" />
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nazwa użytkownika</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <div class="form-text">3-20 znaków: litery, cyfry i podkreślnik</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Adres email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <hr>

                        <h5 class="mb-3">Zmiana hasła (opcjonalnie)</h5>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Pozostaw puste, jeśli nie chcesz zmieniać hasła
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Nowe hasło</label>
                            <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                Min. 8 znaków, wielka litera, mała litera, cyfra i znak specjalny
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label">Potwierdź nowe hasło</label>
                            <input asp-for="ConfirmNewPassword" class="form-control" type="password" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Zapisz zmiany
                            </button>
                            <a asp-action="Users" class="btn btn-secondary">
                                Anuluj
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informacje</h5>
                </div>
                <div class="card-body">
                    <h6>Edycja przez administratora:</h6>
                    <ul class="small">
                        <li>Nie wymaga podania obecnego hasła</li>
                        <li>Możesz zmienić wszystkie dane użytkownika</li>
                        <li>Hasło można pozostawić bez zmian</li>
                        <li>Login i email muszą być unikalne</li>
                    </ul>
                    
                    <hr>
                    
                    <h6>Zasady bezpieczeństwa:</h6>
                    <ul class="small mb-0">
                        <li>Hasło: min. 8 znaków</li>
                        <li>Wymagana: wielka litera</li>
                        <li>Wymagana: mała litera</li>
                        <li>Wymagana: cyfra</li>
                        <li>Wymagany: znak specjalny (@@$!%*?&)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">