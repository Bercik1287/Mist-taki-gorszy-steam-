@inject mist.Data.ApplicationDbContext DbContext
@{
    ViewData["Title"] = "Strona Główna";
    var activePromotions = await DbContext.Promotions
        .Include(p => p.Game)
        .Where(p => p.IsActive && p.StartDate <= DateTime.Now && p.EndDate >= DateTime.Now)
        .Take(3)
        .ToListAsync();
}

<div class="text-center">
    <h1 class="display-4">Witaj w mist!</h1>
    <p class="lead">Taki steam tylko gorszy</p>
    
    @if (activePromotions.Any())
    {
        <div class="alert alert-warning mt-4">
            <h4><i class="bi bi-tag-fill"></i> Trwają promocje!</h4>
            <p class="mb-0">Sprawdź nasze aktualne oferty specjalne w sklepie!</p>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🎮 Bogaty jak Mietek pod żabką katalog (całe trzy gry)</h5>
                    <p class="card-text">Odkryj kilka gier</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">💰 Niekonkurencyjne ceny (bo nie konkurujemy z niczym)</h5>
                    <p class="card-text">Najlepsze oferty i regularne promocje</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">⚡ Szybkie jak PKP pobieranie (może jak sie cud zdarzy to pobierze)</h5>
                    <p class="card-text">Natychmiastowy dostęp do zakupionych gier (najlepszy żart)</p>
                </div>
            </div>
        </div>
    </div>

    @if (activePromotions.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h2 class="mb-4"><i class="bi bi-fire"></i> Aktywne promocje</h2>
            </div>
            @foreach (var promo in activePromotions)
            {
                var originalPrice = promo.Game.Price;
                var currentPrice = promo.CalculateDiscountedPrice(originalPrice);
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-warning">
                        <div class="card-header bg-warning text-dark">
                            <strong>@promo.Name</strong>
                        </div>
                        @if (!string.IsNullOrEmpty(promo.Game.ImageUrl))
                        {
                            <img src="@promo.Game.ImageUrl" class="card-img-top" alt="@promo.Game.Title" style="height: 150px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@promo.Game.Title</h5>
                            <div class="mb-2">
                                <span class="text-muted text-decoration-line-through">@originalPrice.ToString("C")</span>
                                <br>
                                <span class="h4 text-success">@currentPrice.ToString("C")</span>
                                <span class="badge bg-danger ms-2">
                                    @if (promo.DiscountType == mist.Models.DiscountType.Percentage)
                                    {
                                        @:-@promo.DiscountValue%
                                    }
                                    else
                                    {
                                        @:-@promo.DiscountValue.ToString("C")
                                    }
                                </span>
                            </div>
                            <p class="card-text small">Oferta do: @promo.EndDate.ToString("dd.MM.yyyy")</p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@promo.GameId" class="btn btn-success w-100">
                                Zobacz szczegóły
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Games" asp-action="Index" class="btn btn-primary btn-lg me-3">Przeglądaj "gry"</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">Dołącz teraz</a>
        }
    </div>
</div>

@using Microsoft.EntityFrameworkCore
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">