@model mist.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Logowanie</h2>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="UsernameOrEmail" class="form-label">Nazwa użytkownika lub email</label>
                        <input asp-for="UsernameOrEmail" class="form-control" />
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Hasło</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>Nie masz konta? <a asp-action="Register">Zarejestruj się</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}