@model IEnumerable<mist.Models.WishlistItem>
@{
    ViewData["Title"] = "Moja Wishlist";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-heart"></i> Moja Wishlist</h1>
        <a asp-controller="Games" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Wróć do sklepu
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>Wishlist jest pusta</h4>
            <p>Dodaj gry do wishlisty, aby śledzić ich dostępność i promocje.</p>
            <a asp-controller="Games" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-shop"></i> Przeglądaj gry
            </a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <p class="text-muted">
                Liczba gier na wishliście: <strong>@Model.Count()</strong>
            </p>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                var game = item.Game;
                var activePromotion = game.GetActivePromotion();
                var hasPromotion = activePromotion != null;
                var originalPrice = game.Price;
                var currentPrice = game.GetCurrentPrice();

                <div class="col-md-4 mb-4">
                    <div class="card h-100 position-relative">
                        @if (hasPromotion)
                        {
                            <div class="position-absolute top-0 end-0 m-2 z-3">
                                <span class="badge bg-danger fs-6">
                                    @if (activePromotion.DiscountType == mist.Models.DiscountType.Percentage)
                                    {
                                        @:-@activePromotion.DiscountValue%
                                    }
                                    else
                                    {
                                        @:-@activePromotion.DiscountValue.ToString("C")
                                    }
                                </span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 200px; object-fit: cover;">
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text text-muted small">
                                @game.Developer • @game.Genre
                            </p>

                            <div class="mt-auto">
                                @if (hasPromotion)
                                {
                                    <div class="mb-2">
                                        <span class="text-muted text-decoration-line-through small">@originalPrice.ToString("C")</span>
                                        <span class="h5 text-success ms-2">@currentPrice.ToString("C")</span>
                                    </div>
                                    <div class="alert alert-success py-2 px-3 small mb-2">
                                        <i class="bi bi-fire"></i> Promocja: @activePromotion.Name
                                    </div>
                                }
                                else
                                {
                                    <h5 class="text-primary mb-2">@currentPrice.ToString("C")</h5>
                                }

                                <div class="btn-group w-100" role="group">
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-info-circle"></i> Szczegóły
                                    </a>

                                    <form asp-action="RemoveFromWishlist" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="gameId" value="@game.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Czy na pewno chcesz usunąć z wishlisty?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> Dodano: @item.AddedAt.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">