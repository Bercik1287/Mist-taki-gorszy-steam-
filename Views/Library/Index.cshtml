@model IEnumerable<mist.Models.Game>
@{
    ViewData["Title"] = "Moja Biblioteka";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-collection"></i> Moja Biblioteka</h1>
        <a asp-action="Purchases" class="btn btn-outline-primary">
            <i class="bi bi-receipt"></i> Historia zakupów
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>Twoja biblioteka jest pusta</h4>
            <p>Nie posiadasz jeszcze żadnych gier. Odwiedź sklep, aby rozpocząć swoją kolekcję!</p>
            <a asp-controller="Games" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-shop"></i> Przeglądaj gry
            </a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <p class="text-muted">Ilość posiadanych gier: <strong>@Model.Count()</strong></p>
        </div>

        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Brak obrazka</span>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text text-muted small">@game.Genre • @game.Developer</p>
                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success">
                                        <i class="bi bi-play-fill"></i> Uruchom
                                    </button>
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-info-circle"></i> Szczegóły
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                <i class="bi bi-check-circle-fill text-success"></i> Posiadana
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">