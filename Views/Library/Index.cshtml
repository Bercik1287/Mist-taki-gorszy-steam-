@model IEnumerable<mist.Models.Game>
@{
    ViewData["Title"] = "Moja Biblioteka";
    var searchModel = ViewBag.SearchModel as mist.ViewModels.LibrarySearchViewModel;
    var genres = ViewBag.Genres as List<string>;
    var totalGames = ViewBag.TotalGames as int? ?? 0;
    var filteredGames = ViewBag.FilteredGames as int? ?? 0;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-collection"></i> Moja Biblioteka</h1>
        <a asp-action="Purchases" class="btn btn-outline-primary">
            <i class="bi bi-receipt"></i> Historia zakupów
        </a>
    </div>

    @if (!Model.Any() && string.IsNullOrEmpty(searchModel?.SearchTerm) && string.IsNullOrEmpty(searchModel?.Genre))
    {
        <div class="alert alert-info">
            <h4>Twoja biblioteka jest pusta</h4>
            <p>Nie posiadasz jeszcze żadnych gier. Odwiedź sklep, aby rozpocząć swoją kolekcję!</p>
            <a asp-controller="Games" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-shop"></i> Przeglądaj gry
            </a>
        </div>
    }
    else
    {
        <!-- Wyszukiwarka i filtry -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-funnel"></i> Wyszukaj w bibliotece
                    <button class="btn btn-sm btn-light float-end" type="button" data-bs-toggle="collapse" data-bs-target="#libraryFilters">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </h5>
            </div>
            <div class="collapse show" id="libraryFilters">
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="row g-3">
                            <!-- Wyszukiwanie -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-search"></i> Szukaj
                                </label>
                                <input type="text" name="SearchTerm" class="form-control" 
                                       placeholder="Tytuł, deweloper, gatunek..." 
                                       value="@searchModel?.SearchTerm">
                            </div>

                            <!-- Gatunek -->
                            <div class="col-md-3">
                                <label class="form-label">
                                    <i class="bi bi-tag"></i> Gatunek
                                </label>
                                <select name="Genre" class="form-select">
                                    <option value="">Wszystkie</option>
                                    @foreach (var genre in genres ?? new List<string>())
                                    {
                                        <option value="@genre" selected="@(searchModel?.Genre == genre)">@genre</option>
                                    }
                                </select>
                            </div>

                            <!-- Sortowanie -->
                            <div class="col-md-3">
                                <label class="form-label">
                                    <i class="bi bi-sort-down"></i> Sortuj według
                                </label>
                                <select name="SortBy" class="form-select">
                                    <option value="recent" selected="@(searchModel?.SortBy == "recent" || string.IsNullOrEmpty(searchModel?.SortBy))">Ostatnio dodane</option>
                                    <option value="name" selected="@(searchModel?.SortBy == "name")">Nazwa (A-Z)</option>
                                    <option value="genre" selected="@(searchModel?.SortBy == "genre")">Gatunek</option>
                                </select>
                            </div>

                            <!-- Przyciski -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-search"></i> Szukaj
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Wyczyść filtry
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Statystyki -->
        <div class="mb-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="bi bi-collection-fill"></i> 
                        Wszystkich gier: <strong>@totalGames</strong>
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-muted mb-0">
                        <i class="bi bi-funnel-fill"></i> 
                        Wyświetlanych: <strong>@filteredGames</strong>
                    </p>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Nie znaleziono gier</h4>
                <p>Spróbuj zmienić kryteria wyszukiwania lub 
                    <a asp-action="Index">wyczyścić filtry</a>
                </p>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var game in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(game.ImageUrl))
                            {
                                <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-muted">Brak obrazka</span>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@game.Title</h5>
                                <p class="card-text text-muted small">
                                    <i class="bi bi-tag"></i> @game.Genre • 
                                    <i class="bi bi-building"></i> @game.Developer
                                </p>
                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-success">
                                            <i class="bi bi-play-fill"></i> Uruchom
                                        </button>
                                        <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-info-circle"></i> Szczegóły
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <small class="text-muted">
                                    <i class="bi bi-check-circle-fill text-success"></i> Posiadana
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">