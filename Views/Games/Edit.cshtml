@model mist.Models.Game
@{
    ViewData["Title"] = "Edytuj grę: " + Model.Title;
}

<div class="container">
    <h1>Edytuj grę: @Model.Title</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tytuł</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Opis</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Cena</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label">Gatunek</label>
                            <input asp-for="Genre" class="form-control" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Obecne zdjęcie</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl) && Model.ImageUrl != "/images/default-game.jpg")
                        {
                            <img src="@Model.ImageUrl" alt="Obecne zdjęcie" class="img-thumbnail" style="max-width: 300px; max-height: 300px;">
                            <div class="form-check mt-2">
                                <input type="checkbox" name="removeImage" class="form-check-input" id="removeImageCheck">
                                <label class="form-check-label text-danger" for="removeImageCheck">
                                    <i class="bi bi-trash"></i> Usuń obecne zdjęcie
                                </label>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Nie przesłano jeszcze zdjęcia dla tej gry
                            </div>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nowe zdjęcie gry (opcjonalnie)</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" id="imageFileInput" />
                    <div class="form-text">
                        Dozwolone formaty: JPG, JPEG, PNG, GIF, WEBP. Maksymalny rozmiar: 5MB
                    </div>
                    <div id="imagePreview" class="mt-2" style="display: none;">
                        <p class="small text-muted">Nowy podgląd:</p>
                        <img id="previewImage" src="" alt="Podgląd" class="img-thumbnail" style="max-width: 300px; max-height: 300px;">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Developer" class="form-label">Developer</label>
                            <input asp-for="Developer" class="form-control" />
                            <span asp-validation-for="Developer" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Publisher" class="form-label">Wydawca</label>
                            <input asp-for="Publisher" class="form-control" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ReleaseDate" class="form-label">Data wydania</label>
                    <input asp-for="ReleaseDate" class="form-control" type="date" 
                           value="@Model.ReleaseDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Gra aktywna</label>
                </div>

                <div class="d-grid gap-2 d-md-flex">
                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informacje</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID gry:</strong> @Model.Id</p>
                    <p><strong>Data dodania:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    <hr>
                    <p class="small text-muted mb-0">
                        <strong>Zarządzanie zdjęciem:</strong><br>
                        • Możesz przesłać nowe zdjęcie<br>
                        • Możesz usunąć obecne zdjęcie<br>
                        • Jeśli nie wybierzesz żadnej opcji, obecne zdjęcie zostanie zachowane
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Podgląd obrazka przed przesłaniem
        document.getElementById('imageFileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImage').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
                
                // Jeśli wybrano nowy plik, odznacz opcję usunięcia
                document.getElementById('removeImageCheck')?.checked = false;
            } else {
                document.getElementById('imagePreview').style.display = 'none';
            }
        });

        // Jeśli zaznaczono usunięcie, wyczyść input pliku
        document.getElementById('removeImageCheck')?.addEventListener('change', function() {
            if (this.checked) {
                document.getElementById('imageFileInput').value = '';
                document.getElementById('imagePreview').style.display = 'none';
            }
        });
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">