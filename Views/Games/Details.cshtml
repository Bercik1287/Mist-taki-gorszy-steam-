@model mist.Models.Game
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 400px;">
                    <span class="text-muted">Brak obrazka</span>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.Title</h1>
            <p class="text-muted">@Model.Genre • @Model.ReleaseDate.ToString("dd.MM.yyyy")</p>
            
            <div class="mb-3">
                <h3 class="text-primary">@Model.Price.ToString("C")</h3>
            </div>

            <div class="mb-4">
                <h4>Opis</h4>
                <p class="lead">@Model.Description</p>
            </div>

            <div class="row mb-4">
                <div class="col-6">
                    <strong>Developer:</strong>
                    <p>@Model.Developer</p>
                </div>
                <div class="col-6">
                    <strong>Wydawca:</strong>
                    <p>@Model.Publisher</p>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex">
                <button class="btn btn-primary btn-lg">Kup teraz</button>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Usuń</a>
                }
                <a asp-action="Index" class="btn btn-outline-secondary">Powrót do listy</a>
            </div>
        </div>
    </div>
</div>