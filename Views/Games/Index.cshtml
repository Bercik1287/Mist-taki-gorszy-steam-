@model IEnumerable<mist.Models.Game>
@{
    ViewData["Title"] = "Katalog Gier";
    var searchModel = ViewBag.SearchModel as mist.ViewModels.GameSearchViewModel;
    var genres = ViewBag.Genres as List<string>;
    var developers = ViewBag.Developers as List<string>;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shop"></i> Katalog Gier</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Dodaj nową grę
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Wyszukiwarka i filtry -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Wyszukaj i filtruj
                <button class="btn btn-sm btn-light float-end" type="button" data-bs-toggle="collapse" data-bs-target="#searchFilters">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </h5>
        </div>
        <div class="collapse show" id="searchFilters">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <!-- Wyszukiwanie -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-search"></i> Szukaj
                            </label>
                            <input type="text" name="SearchTerm" class="form-control" 
                                   placeholder="Tytuł, deweloper, opis..." 
                                   value="@searchModel?.SearchTerm">
                        </div>

                        <!-- Sortowanie -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-sort-down"></i> Sortuj według
                            </label>
                            <select name="SortBy" class="form-select">
                                <option value="newest" selected="@(searchModel?.SortBy == "newest" || string.IsNullOrEmpty(searchModel?.SortBy))">Najnowsze</option>
                                <option value="name" selected="@(searchModel?.SortBy == "name")">Nazwa (A-Z)</option>
                                <option value="price-asc" selected="@(searchModel?.SortBy == "price-asc")">Cena (rosnąco)</option>
                                <option value="price-desc" selected="@(searchModel?.SortBy == "price-desc")">Cena (malejąco)</option>
                            </select>
                        </div>

                        <!-- Gatunek -->
                        <div class="col-md-4">
                            <label class="form-label">
                                <i class="bi bi-tag"></i> Gatunek
                            </label>
                            <select name="Genre" class="form-select">
                                <option value="">Wszystkie</option>
                                @foreach (var genre in genres ?? new List<string>())
                                {
                                    <option value="@genre" selected="@(searchModel?.Genre == genre)">@genre</option>
                                }
                            </select>
                        </div>

                        <!-- Deweloper -->
                        <div class="col-md-4">
                            <label class="form-label">
                                <i class="bi bi-building"></i> Deweloper
                            </label>
                            <select name="Developer" class="form-select">
                                <option value="">Wszyscy</option>
                                @foreach (var dev in developers ?? new List<string>())
                                {
                                    <option value="@dev" selected="@(searchModel?.Developer == dev)">@dev</option>
                                }
                            </select>
                        </div>

                        <!-- Zakres cen -->
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bi bi-currency-dollar"></i> Cena min
                            </label>
                            <input type="number" name="MinPrice" class="form-control" 
                                   step="0.01" min="0" placeholder="0.00" 
                                   value="@searchModel?.MinPrice">
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bi bi-currency-dollar"></i> Cena max
                            </label>
                            <input type="number" name="MaxPrice" class="form-control" 
                                   step="0.01" min="0" placeholder="999.99" 
                                   value="@searchModel?.MaxPrice">
                        </div>



                        <!-- Przyciski -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Szukaj
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Wyczyść filtry
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Wyniki -->
    <div class="mb-3">
        <p class="text-muted">
            Znaleziono: <strong>@Model.Count()</strong> 
            @(Model.Count() == 1 ? "grę" : Model.Count() < 5 ? "gry" : "gier")
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Nie znaleziono gier</h4>
            <p>Spróbuj zmienić kryteria wyszukiwania lub 
                <a asp-action="Index">wyczyścić filtry</a>
            </p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var game in Model)
            {
                var activePromotion = game.GetActivePromotion();
                var hasPromotion = activePromotion != null;
                var originalPrice = game.Price;
                var currentPrice = game.GetCurrentPrice();

                <div class="col-md-4 mb-4">
                    <div class="card h-100 position-relative">
                        @if (hasPromotion)
                        {
                            <div class="position-absolute top-0 end-0 m-2 z-3">
                                <span class="badge bg-danger fs-6">
                                    @if (activePromotion.DiscountType == mist.Models.DiscountType.Percentage)
                                    {
                                        @:-@activePromotion.DiscountValue%
                                    }
                                    else
                                    {
                                        @:-@activePromotion.DiscountValue.ToString("C")
                                    }
                                </span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text flex-grow-1">@(game.Description.Length > 100 ? game.Description.Substring(0, 100) + "..." : game.Description)</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        @if (hasPromotion)
                                        {
                                            <span class="text-muted text-decoration-line-through">@originalPrice.ToString("C")</span>
                                            <br>
                                            <span class="h5 text-success mb-0">@currentPrice.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="h5 text-primary">@currentPrice.ToString("C")</span>
                                        }
                                    </div>
                                    <span class="badge bg-secondary">@game.Genre</span>
                                </div>

                                @if (hasPromotion)
                                {
                                    <div class="alert alert-success py-1 px-2 small mb-2">
                                        <i class="bi bi-tag"></i> @activePromotion.Name
                                    </div>
                                }

                                <div class="btn-group w-100">
                                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-outline-primary">Szczegóły</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-outline-warning">Edytuj</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">